<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BookingEksamenMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BookingEksamenMAUI"
    xmlns:views="clr-namespace:BookingEksamenMAUI.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Comments"
        ContentTemplate="{DataTemplate views:CommentsPage}"
        Route="CommentsPage" />

    <ShellContent
      Title="Register"
      ContentTemplate="{DataTemplate views:RegisterPage}"
      Route="RegisterPage" />

    <ShellContent
      Title="Login"
      ContentTemplate="{DataTemplate views:LoginPage}"
      Route="LoginPage" />

    <ShellContent
      Title="Contact"
      ContentTemplate="{DataTemplate views:ContactPage}"
      Route="ContactPage" />

</Shell>
